@model EmployeeManagement.DTOs.EmployeeGetDTO

@{
    ViewData["Title"] = "Details";
    var currentPage = ViewBag.CurrentPage;
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Employee Details</h1>

    <div class="card shadow-sm">
        <div class="row g-0">
            <!-- Employee Image Column -->
            <div class="col-md-4 text-center p-3">
                <img src="~/images/@Model.Picture" alt="@Model.Name"
                     class="img-fluid rounded"
                     style="max-height: 300px; object-fit: cover;">
            </div>
            <!-- Employee Details Column -->
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title display-5">@Model.Name</h2>
                    <p class="card-text fs-5"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text fs-5">
                        <strong>Annual Leave Days Remaining:</strong> @Model.AnnualLeaveDaysRemaining
                    </p>
                    <p class="card-text fs-5">
                        <strong>Bonus Leave Days Remaining:</strong> @Model.BonusLeaveDaysRemaining
                    </p>
                    <p class="card-text fs-5">
                        <strong>Created At:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")
                    </p>
                    <p class="card-text fs-5">
                        <strong>First Part Leave Expiry:</strong>
                        @if (Model.FirstPartLeaveExpiry == null)
                        {
                            <span>Expired</span>
                        }
                        else
                        {
                            @Model.FirstPartLeaveExpiry
                        }
                    </p>
                    <p class="card-text fs-5">
                        <strong>Second Part Leave Expiry:</strong>
                        @if (Model.SecondPartLeaveExpiry == null)
                        {
                            <span>Expired</span>
                        }
                        else
                        {
                            @Model.SecondPartLeaveExpiry
                        }
                    </p>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-action="AllEmployees" asp-route-page="@currentPage" class="btn btn-success">
                Go Back To Employees
            </a>
        </div>
    </div>
</div>
